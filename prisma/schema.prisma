generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  telegramId BigInt  //@unique 
  name      String
  age       Int
  phone     String
  region    String
  district  String
  createdAt DateTime @default(now())
}

model Test {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  answers   String
  startTime DateTime
  endTime   DateTime 
  results   Result[]
}

model Result {
  id          Int      @id @default(autoincrement())
  testId      Int
  userId      BigInt  
  userAnswers String
  score       Int
  test        Test     @relation(fields: [testId], references: [id])

  @@unique([testId, userId])
}